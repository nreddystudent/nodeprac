extends layouts/main-layout.pug
block styles
	link(rel="stylesheet" href="/css/product.css")
block content 
	main
		if prods.length > 0
			.grid
				each product in prods
					article.card.product-item
						header.card__header
							h1.product__title #{product.title}
						.card__image
							img(src="https://media.giphy.com/media/3o7aCZDlmQZLe4Q4V2/giphy.gif" alt="A book")
						.card__content
							h2.product__price $19.99
							p.product__description A Good book and stuff
						.card__actions
							button.btn Add To Cart
		else
			h1 No Products